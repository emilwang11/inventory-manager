
{% block content %}

    <div class="form-wrapper">
      <h2 class="title">Contact</h2>

      <form method="POST" action="{{ url_for('edit', product_id = product_id) }}">
        {{ form.csrf_token }}
          <fieldset class="form-field">
              {{ form.name.label }}
              {{ form.name(size=20) }}
          </fieldset>

          <fieldset class="form-field">
              {{ form.description.label }}
              {{ form.description }}
          </fieldset>

          <fieldset class="form-field">
              {{ form.price.label }}
              {{ form.price }}
          </fieldset>

          <fieldset class="form-field">
              {{ form.stock.label }}
              {{ form.stock }}
          </fieldset>

          {{ form.submit }}

      </form>
    </div>

{% endblock %}